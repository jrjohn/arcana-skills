{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch(domain:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "powershell -ExecutionPolicy Bypass -File \"$env:USERPROFILE\\.claude\\statusline-command.ps1\""
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$env:USERPROFILE\\.claude\\hooks\\validate-ui-flow.ps1\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
