{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "WebFetch(domain:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "powershell -ExecutionPolicy Bypass -File \"$env:USERPROFILE\\.claude\\statusline-command.ps1\""
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true
  },
  "model": "opus",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\hook-runner.js\" validate-ui-flow",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "node \"%USERPROFILE%\\.claude\\hooks\\hook-runner.js\" enforce-uiux-skill",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
